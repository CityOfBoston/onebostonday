{% header "Content-Type: application/json" %}
{% set pages = craft.entries({section:'and, not press, not community'}) %}
{% set assets = craft.assets.limit(null).kind('image') %}


[
    {
        "title": "sitemap.xml",
        "url": "{{siteUrl}}sitemap.xml"
    },
    {
        "title": "humans.txt",
        "url": "{{siteUrl}}humans.txt"
    },
    {
        "title": "screen.min.css",
        "url": "{{siteUrl}}css/screen.min.css"
    },
    {
        "title": "print.css",
        "url": "{{siteUrl}}css/print.min.css"
    },
    {
        "title": "ie.min.css",
        "url": "{{siteUrl}}css/ie.min.css"
    },
    {
        "title": "kiosk.min.css",
        "url": "{{siteUrl}}css/kiosk.min.css"
    },
    {
        "title": "tweets.min.css",
        "url": "{{siteUrl}}css/tweets.min.css"
    },
    {
        "title": "main.js",
        "url": "{{siteUrl}}js/main.js"
    },
    {
        "title": "plugins.js",
        "url": "{{siteUrl}}js/plugins.js"
    },
    {
        "title": "modernizr.js",
        "url": "{{siteUrl}}js/vendor/modernizr.js"
    },
    {
        "title": "404",
        "url": "{{siteUrl}}404"
    },
{% for page in pages %}
    {% if page.url %}
    {
        "title": "{{page.title}}",
        "url": "{{page.url}}"
    },
    {% endif %}
{% endfor %}
{% for asset in assets %}
    {
        "title": "{{asset.filename}}",
        "url": "{{asset.getUrl}}"
        {% if loop.last%}
        }
        {% else %}
        },
        {% endif %}
{% endfor %}
]
