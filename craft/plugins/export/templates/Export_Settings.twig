{% import "_includes/forms" as forms %}

{{ forms.textField({
    label: 'Destination Site',
    instructions: 'What is the site that the export tool is uploading to?',
    id: 'sitedestination',
    name: 'siteDestination', 
    value: settings['siteDestination']})
}}

{{ forms.textField({
    label: 'URL Endpoint',
    instructions: 'URL Endpoint to hit',
    id: 'urlendpoint',
    name: 'urlEndpoint', 
    value: settings['urlEndpoint']})
}}

{{ forms.textField({
    label: 'Validation Key',
    instructions: 'Private Validation Key',
    id: 'validationkey',
    name: 'validationKey', 
    value: settings['validationKey']})
}}

{{ forms.textField({
    label: 'htaccess Username',
